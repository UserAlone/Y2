@model Model.Users
@using Model;
@{
    ViewBag.Title = "Edit";
}
<script src="~/Scripts/jquery-1.7.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/CSS/table.css" rel="stylesheet" />

<script type="text/javascript">
    function tj(obj) {
        if(obj=="ok"){
            window.location.href = "/RoleUs/Index";
        }
    }

</script>

@using (Ajax.BeginForm("Edit", new AjaxOptions { HttpMethod = "post", OnSuccess = "tj" }))
{
    <table width="100%">
        <tr>
            <td>
                <font color="black">您正在做的业务是：人力资源--权限管理--编辑用户</font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="submit" id="powerAction!doModifyUser_0" value="&#20445;&#23384;" class="BUTTON_STYLE1" />

                <input type="button" value="返回" class="BUTTON_STYLE1"
                       onclick="history.back()">
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=3 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td class="TD_STYLE1">角色编号</td>
            <td class="TD_STYLE2">@Html.TextBoxFor(e => e.user_id, new { @readonly = true })</td>
            <td class="TD_STYLE1">用户名称</td>
            <td class="TD_STYLE2">
                @Html.TextBoxFor(e => e.user_name);

                <input type="hidden" name="users.userId" value="1015" />
            </td>
            <td class="TD_STYLE1">用户密码</td>
            <td class="TD_STYLE2">
                @Html.TextBoxFor(e => e.user_password);
                @*<input type="password" value="123456" id="userPassword" name="user_password" />*@
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">真实姓名</td>
            <td class="TD_STYLE2">
                @Html.TextBoxFor(e => e.user_true_name);
                @*<input type="text" value="谢鹏" id="userTrueName" name="user_true_name" />*@
            </td>
            <td class="TD_STYLE1">用户身份</td>
            <td class="TD_STYLE2">
                <select name="rid">
                    @{List<Role> list = ViewData["dt"] as List<Role>; }
                    @for (int i = 0; i < list.Count; i++)
                    {
                        <option value="@list[i].rid">@list[i].rname</option>
                    }
                </select>

            </td>
        </tr>
    </table>

}

<div>

</div>
