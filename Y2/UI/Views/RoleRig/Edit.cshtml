<script type="text/javascript">
    var c = 0;
    function tj() {
        var qid = "";
        var nodes = $('#tt').tree('getChecked');	// 获取选中
        for (var i = 0; i < nodes.length; i++) {
            qid += nodes[i].id + ",";
        }

        var nodes1 = $('#tt').tree('getChecked', 'indeterminate');//获取半勾
        for (var i = 0; i < nodes1.length; i++) {
            qid += nodes[i].id + ",";
        }
        //获取修改后的qid
        qid = qid.substring(0, qid.length - 1);
        //发送ajax:把roleId和qid字符串(split(','))
        $.ajax({
            url: "/RoleRig/Edit2?id=" + qid + "&c=" + c,
            type: "get",
            data: "",
            success: function (img) {
                if (img == "ok") {
                    alert("修改成功");
                    window.location.href = "/RoleRig/Index";
                }
            }
        })
    }
    $(function () {
        c = document.getElementById("rid").value;
        $("#tt").tree({
            url: "/RoleRig/Index3?id2="+c,
            checkbox: true,
            onLoadSuccess: function (node, data) {
                var $tree = $(this);//获取树控件
                for (var i = 0; i < data.length; i++) {
                    var d = data[i];
                    if (d.state == "closed") {
                        $tree.tree("expandAll");
                    }
                }
            }
        });
    })

    $("#xg").click(function () {

    })
</script>
@using (Ajax.BeginForm("Edit", new AjaxOptions { HttpMethod="post",OnSuccess="tj"}))
