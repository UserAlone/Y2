
@{
    Layout = null;
}
@using Model;
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css" />
    <link rel="stylesheet"
          href="../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/comm/list.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/jquery-1.7.2.js">
    </script>
    @*<script type="text/javascript"
                src="../../javascript/locate.js">
        </script>*@
    <script src="~/Scripts/DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        $(function () {
            $(function () {
                $("#date_start").focus(function () {
                    WdatePicker();
                })
            })
            $(function () {
                $("#date_end").focus(function () {
                    WdatePicker();
                })
            })

            $("#firstKindId").change(function () {
                $("#secondKindId option:gt(0)").remove();
                $.ajax({
                    type: "post",
                    url: "/recruit/first_kind_id",
                    data: "first_kind_id=" + $("#firstKindId").val(),
                    success: function (mess) {
                        var data = eval(mess);
                        for (var i = 0; i < data.length; i++) {
                            $("#secondKindId").append("<option value='" + data[i].second_kind_id + "'>" + data[i].second_kind_name + "</option>");
                        }
                    }
                })
            })
            $("#secondKindId").change(function () {
                $("#thirdKindId option:gt(0)").remove();
                $.ajax({
                    type: "post",
                    url: "/recruit/second_kind_id",
                    data: "second_kind_id=" + $("#secondKindId").val(),
                    success: function (mess) {
                        var data = eval(mess);
                        for (var i = 0; i < data.length; i++) {
                            $("#thirdKindId").append("<option value='" + data[i].third_kind_id + "'>" + data[i].third_kind_name + "</option>");
                        }
                    }
                })
            })
            $("#majorKindId").change(function () {
                $("#majorId option:gt(0)").remove();
                $.ajax({
                    type: "post",
                    url: "/recruit/major_kind_id",
                    data: "major_kind_id=" + $("#majorKindId").val(),
                    success: function (mess) {
                        var data = eval(mess);
                        for (var i = 0; i < data.length; i++) {
                            $("#majorId").append("<option value='" + data[i].major_id + "'>" + data[i].major_name + "</option>");
                        }
                    }
                })
            })
            var Currentpage = 1;
            $("#tijiao").click(function () {
                var yi = $("select[name='humanFile.firstKindId']").val();
                var er = $("select[name='humanFile.secondKindId']").val();
                var san = $("select[name='humanFile.thirdKindId").val();
                var zhiwei = $("select[name='humanFile.humanMajorKindId").val();
                var zhiwei_name = $("select[name='humanFile.humanMajorId").val();
                var start = $("input[name='utilBean.startDate']").val();
                var end = $("input[name='utilBean.endDate']").val();
                if (start != "" && end != "" && yi != null && er != null && san != null && zhiwei != null && zhiwei_name != null) {
                    $.ajax({
                        type: "post",
                        url: "/humanResources/delete_list3",
                        data: "Currentpage=" + Currentpage +
                            "&yi=" + yi +
                            "&er=" + er +
                            "&san=" + san +
                            "&zhiwei=" + zhiwei +
                            "&zhiwei_name=" + zhiwei_name +
                            "&start=" + start +
                            "&end=" + end,
                        success: function (mess) {
                            if (mess == "yes") {
                                location.href = '/humanResources/delete_list';
                            }
                        }
                    });
                } else if (start == "" && end == "" && yi == null && er == null && san == null && zhiwei == null && zhiwei_name == null) {
                    location.href = '/humanResources/delete_list';
                } else {
                    alert('请填全信息！');
                }
            })
        })
    </script>
</head>

<body>
    <form method="post" action="javascript:void(0)">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案删除</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="查询" class="BUTTON_STYLE1" id="tijiao" />
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td width="16%" class="TD_STYLE1">
                    请选择员工所在I级机构
                </td>
                <td width="84%" class="TD_STYLE2">
                    <select name="humanFile.firstKindId" size="5" id="firstKindId"
                            class="SELECT_STYLE2">
                        <option value="">全部</option>
                        @foreach (config_file_first_kind item in ViewBag.list)
                        {
                            <option value="@item.first_kind_id">@item.first_kind_name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    请选择员工所在II级机构
                </td>
                <td width="84%" class="TD_STYLE2">
                    <select name="humanFile.secondKindId" size="5" id="secondKindId"
                            class="SELECT_STYLE2">
                        <option value="">全部</option>
                    </select>
                </td>
            </tr>
            <tr class="TR_STYLE1">
                <td width="16%" class="TD_STYLE1">
                    请选择员工所在III级机构
                </td>
                <td width="84%" class="TD_STYLE2">
                    <select name="humanFile.thirdKindId" class="SELECT_STYLE2" size="5" id="thirdKindId">
                        <option value="">全部</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    请选择职位分类
                </td>
                <td width="84%" class="TD_STYLE2">
                    <select name="humanFile.humanMajorKindId" size="5" id="majorKindId"
                            class="SELECT_STYLE2">
                        <option value="">全部</option>
                        @foreach (config_major_kind item in ViewBag.list4)
                        {
                            <option value="@item.major_kind_id">@item.major_kind_name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr class="TR_STYLE1">
                <td width="16%" class="TD_STYLE1">
                    请选择职位名称
                </td>
                <td width="84%" class="TD_STYLE2">
                    <select name="humanFile.humanMajorId" size="5" class="SELECT_STYLE2" id="majorId">
                        <option value="">全部</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    请输入建档时间
                </td>
                <td width="84%" class="TD_STYLE2">
                    <input type="text" name="utilBean.startDate" readonly
                           style="width: 14%" class="INPUT_STYLE2" id="date_start">
                    至
                    <input type="text" name="utilBean.endDate" readonly="readonly"
                           style="width: 14%" class="INPUT_STYLE2" id="date_end">
                    <input type="hidden" name="utilBean.datePropertyName" value="registTime" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
