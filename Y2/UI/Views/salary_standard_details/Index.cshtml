
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <link href="~/CSS/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $.ajax({
                url: "/salary_standard_details/Index2",
                type: "get",
                success: function (dt2) {
                    var dt = JSON.parse(dt2);
                    for (var i = 0; i < dt.length; i++) {
                        var $tr = $("<tr></tr>");
                        var $td = $("<td>" + dt[i]["standard_name"] + "</td>");
                        var $td2 = $("<td><a href='/salary_standard_details/Delete/" + dt[i]["sdt_id"] + "'>删除</td>")
                        $tr.append($td, $td2);
                        $("#tables").append($tr);
                    }
                }
            })
        })
    </script>

</head>

<body>
    <form action="../customiz/customizAction!findStandardDetails" method="post">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--薪酬管理设置--薪酬项目设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1"
                           onclick="window.location.href = '/salary_standard_details/Add'">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="tables">
            <tr height="20">
                <td width="80%" class="TD_STYLE1" align="center">
                    薪酬项目名称
                </td>
                <td width="20%" class="TD_STYLE1" align="center">
                    删除
                </td>
            </tr>
        </table>
        <br>
        <br>
        <th colspan="7" class="pager"></th>
    </form>
</body>
</html>


