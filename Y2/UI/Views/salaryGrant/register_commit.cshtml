
@{
    Layout = null;
}
@using Model;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>register_commit</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/table.css" rel="stylesheet" />  
    <script src="~/js/jquery-1.12.4.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    @{ Dictionary<string, object> dic = (Dictionary<string, object>)ViewData["dic"];}
    <form method="post" action="/salaryGrant/DengJi">
        <table width="100%">
            <tr>
                <td colspan="2" style="text-align: left">
                    <font color="black">
                        您正在做的业务是：人力资源--薪酬标准管理--薪酬发放登记
                    </font>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: right;">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" onclick="javascript:window.history.back();" class="BUTTON_STYLE1">
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: left">
                    薪酬单编号：@dic["salary_grant_id"]
                    <input type="hidden" name="salary_grant_id" value="@dic["salary_grant_id"]">
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: left">
                    机构：
                    @dic["level"]
                    <input type="hidden" name="level" value="@dic["level"]" />
                    <input type="hidden" name="configName" value="@dic["config_name"]" />
                    <input type="hidden" name="configID" value="@dic["config_id"]" />
                </td>
            </tr>
            <tr>
                <td style="text-align: left">
                    本机构总人数:<span id="showhumanAmount"></span>
                    <input type="hidden" name="human_amount" value="" id="humanAmount">
                    ，基本薪酬总数:<span id="shpwsalary_standard_sum"></span><input type="hidden" name="salary_standard_sum" value="" id="salary_standard_sum" />
                    ，实发总额:<span id="salarySum_sum"></span>
                    <input type="hidden" id="salaryPaidSum" name="salary_paid_sum" value="" />

                </td>
                <td style="text-align: right;">
                    登记人:<input type="text" name="register" value="better_admin" size="8" readonly="readonly">
                    登记时间：<span id="Tdate"></span>
                    <input type="hidden" name="regist_time" id="Tdate2">
                </td>
            </tr>
        </table>


        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="table">
            <tr>
                <td class="TD_STYLE1">
                    <span>序号</span>
                </td>
                <td class="TD_STYLE1">
                    <span>档案编号</span>
                </td>
                <td class="TD_STYLE1">
                    <span>姓名</span>
                </td>
                <td class="TD_STYLE1">
                    <span>薪酬等级补贴详情</span>
                </td>
                <td class="TD_STYLE1" width="7%">
                    奖励金额
                </td>
                <td class="TD_STYLE1" width="7%">
                    销售绩效总额
                </td>
                <td class="TD_STYLE1" width="7%">
                    应扣金额
                </td>
                <td class="TD_STYLE1" width="7%">
                    实发金额
                </td>
            </tr>
            @{ List<human_file> list = (List<human_file>)ViewData["list"];}
            @for (int i = 0; i < list.Count; i++)
            {
                string salaryStandardSum = "salaryStandardSum" + (i + 1);
                //var hf = (human_file)list[i]["hf"];
                //var ssdList = (List<salary_standard_details>)list[i]["salary_standard_details"];
                string bounsSum = "bounsSum" + (i + 1);
                string saleSum = "saleSum" + (i + 1);
                string deductSum = "deductSum" + (i + 1);
                string salaryPaidSum = "salaryPaidSum" + (i + 1);
                string salary_sum = "salary_sum" + (i + 1);
                <input type="hidden" name="grantDetails[@i].salaryGrantId" value="@dic["salary_grant_id"]">
                <input type="hidden" id="@salaryStandardSum" name="grantDetails[@i].salaryStandardSum" value="135827.0" />
                <tr class="TD_STYLE2">
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        <input type="hidden" id="@salary_sum" value="@list[i].salary_sum" />
                        <input type="hidden" name="salary_standard_id[@i]" value="@list[i].salary_standard_id" />
                        @list[i].human_id
                        <input type="hidden" name="grantDetails[@i].humanId" value="@list[i].human_id" />
                    </td>
                    <td>
                        @list[i].human_name
                        <input type="hidden" name="grantDetails[@i].humanName" value="@list[i].human_name" />
                    </td>
                    <td>
                        <a href="#" id="showSalaryDetails" salary_standard_id="@list[i].salary_standard_id" data-toggle="modal" data-target="#myModal">查看薪酬登记补贴详情</a>
                    </td>
                    <td>
                        <input type="text" name="grantDetails[@i].bounsSum" id="@bounsSum" onchange="onKeyPress(@(i+1),@list[i].paid_salary_sum)" class="INPUT_STYLE2" />
                    </td>
                    <td>
                        <input type="text" name="grantDetails[@i].saleSum" id="@saleSum" onchange="onKeyPress(@(i+1),@list[i].paid_salary_sum)" class="INPUT_STYLE2" />
                    </td>
                    <td>
                        <input type="text" name="grantDetails[@i].deductSum" id="@deductSum" onchange="onKeyPress(@(i+1),@list[i].paid_salary_sum)" class="INPUT_STYLE2" />
                    </td>
                    <td>
                        <input type="text" name="grantDetails[@i].salaryPaidSum" readonly="readonly" id="@salaryPaidSum" value="@list[i].paid_salary_sum" class="INPUT_STYLE2" />
                    </td>

                </tr>
            }
        </table>
    </form>
    <div class="modal" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                       登记发放详细信息
                    </h4>
                </div>
                <div class="modal-body">
                  <table border="1" id="table2" class="table table-hover">
                      <tr>
                          <th>item_id</th><th>item_name</th><th>item_salary</th>
                      </tr>
                  </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        关闭
                    </button>
                    <button type="button" class="btn btn-primary">
                        提交更改
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
    <script type="text/javascript">        
        //计算实发总金额
        function totalpaid_salary_sum() {            
            var sum = 0;
            var size = $("#humanAmount").val();
            for (var i = 1; i <= size; i++) {               
                sum += parseFloat(document.getElementById("salaryPaidSum" + i).value);
            }       
            return sum;
        }
        //计算基本薪酬总数
        function totalsalary_sum() {
            var sum = 0;
            var size = $("#humanAmount").val();
            for (var i = 1; i <= size; i++) {
                var salary_sum = document.getElementById("salary_sum" + i).value;
                sum += parseFloat(salary_sum);
            }
            return sum;
        }
        $(function () {
            $("#showhumanAmount").text($("#table tr:gt(0)").length);
            $("#humanAmount").val($("#table tr:gt(0)").length);
            $("#salarySum_sum").text(totalpaid_salary_sum());
            $("#salaryPaidSum").val(totalpaid_salary_sum());         
            $("#shpwsalary_standard_sum").text(totalsalary_sum());
            $("#salary_standard_sum").val(totalsalary_sum());
            $(document).on("click", "#showSalaryDetails", function () {
                $.ajax({
                    url: "/salaryGrant/Getsalary_grant_details?id="+$(this).attr("salary_standard_id"),
                    type:"get",                
                    datatype: "json",
                    success: function (list) {
                        $("#table2 tr:gt(0)").remove();
                        for (var i = 0; i <list.length; i++) {
                            var $tr = $("<tr><td>" + list[i].item_id + "</td><td>" + list[i].item_name + "</td><td>" + list[i].salary + "</td></tr>");
                            $("#table2").append($tr);
                        }
                    }
                });
            });
        });
        function onKeyPress(i, benjin) {
            var size = $("#humanAmount").val();
            var bounsSum = document.getElementById("bounsSum" + i);
            var saleSum = document.getElementById("saleSum" + i);
            var deductSum = document.getElementById("deductSum" + i);
            var salaryPaidSum = document.getElementById("salaryPaidSum" + i);
            if (isNaN(bounsSum.value) || bounsSum.value < 0) {
                alert("金额填写错误!");
                bounsSum.value = "0.00";
                return;
            }
            if (isNaN(saleSum.value) || saleSum.value < 0) {
                alert("金额填写错误!");
                saleSum.value = "0.00";
                return;
            }
            if (isNaN(deductSum.value) || deductSum.value < 0) {
                alert("金额填写错误!");
                deductSum.value = "0.00";
                return;
            }
            salaryPaidSum.value = Number(bounsSum.value) + Number(saleSum.value) - Number(deductSum.value) + Number(benjin);
            var sum = 0;
            for (var j = 1; j <= size; j++) {
                sum = Number(sum) + Number(document.getElementById("salaryPaidSum" + j).value);
            }
            document.getElementById("salarySum_sum").innerHTML = sum;
            document.getElementById("salaryPaidSum").value = sum;
        }
        function time() {
            var tdate = document.getElementById("Tdate");
            var d = new Date();
            var y = d.getFullYear();
            var moth = d.getMonth() + 1;
            var date = d.getDate();
            var h = d.getHours();
            var m = d.getMinutes();
            var s = d.getSeconds();
            var hh = 20 - 1 - h;
            var mm = 60 - 1 - m;
            var ss = 60 - s;
            if (hh > 0) {
                mm = mm + 60 * hh;
            }
            if (moth < 10) {
                moth = "0" + moth;
            }
            if (date < 10) {
                date = "0" + date;
            }
            if (h < 10) {
                h = "0" + h;
            }
            if (m < 10) {
                m = "0" + m;
            }
            if (s < 10) {
                s = "0" + s;
            }
            if (mm < 10) {
                mm = "0" + mm;
            }
            if (ss < 10) {
                ss = "0" + ss;
            }

            tdate.innerHTML = y + "-" + moth + "-" + date + " " + h + ":" + m + ":" + s;
            document.getElementById("Tdate2").value = tdate.innerHTML;
        }
        window.onload = time;
        var out = window.setInterval(time, 1000);
    </script>
</body>
</html>
