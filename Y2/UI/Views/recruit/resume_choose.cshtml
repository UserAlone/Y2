
@{
    Layout = null;
}
@using Model;
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>My JSP 'resume-choose.jsp' starting page</title>

    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script src="~/Scripts/DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        var Currentpage = 1;
        $(function () {
            $(function () {
                $("#kai").focus(function () {
                    WdatePicker();
                })
            })
            $(function () {
                $("#end").focus(function () {
                    WdatePicker();
                })
            })
            $("#majorKindId").click(function () {
                var id = $("#majorKindId").val();
                $("#majorId option").remove();
                $.ajax({
                    type:"post",
                    url: "/recruit/resume_choose/"+id,
                    success: function (mess) {
                        var data = eval("(" + mess + ")");
                        for (var i = 0; i < data.length; i++) {
                            var $option = $("<option value=" + data[i].major_id+ ">" + data[i].major_name + "</option>");
                            $("#majorId").append($option);
                        }
                    }
                })
            })
            $("#tijiao").click(function () {
                var gjz = $("input[name='utilBean.primarKey']").val();
                var start = $("input[name='utilBean.startDate']").val();
                var end = $("input[name='utilBean.endDate']").val();
                var major_kind_id = $("select[name='major_kind_id']").val();
                var human_major_id = $("select[name='human_major_id']").val();
                if (gjz != "" && start != "" && end != "" && major_kind_id != null && human_major_id != null) {
                    $.ajax({
                        type: "post",
                        url: "/recruit/resume_list3",
                        data: "Currentpage=" + Currentpage +
                            "&gjz=" + gjz +
                            "&start=" + start +
                            "&end=" + end +
                            "&major_kind_id=" + major_kind_id+
                            "&human_major_id="+human_major_id,
                        success: function (mess) {
                            if(mess=="yes"){
                                location.href = '/recruit/resume_list';
                            }
                        }
                    });
                } else if (gjz == "" && start == "" && end == "" && major_kind_id == null && human_major_id == null) {
                    location.href = '/recruit/resume_list';
                } else {
                    alert('请填全信息！');
                }
            })
        })
    </script>
</head>

<body>
    <form id="recruitAction!findEngageResume?a=list" name="resumeChooseForm" action="javascript:void(0)" method="post">
        <input type="hidden" name="engageResume.humanMajorKindName"
               id="majorKindName" />
        <input type="hidden" name="engageResume.humanMajorName"
               id="majorName" />
        <input type="hidden" name="engageResume.checkStatus"
               value="false" />

        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--招聘管理--简历管理--简历筛选 </font>
                </td>
            </tr>
            <tr>
                <td align="right">

                    <input type="button" value="开始" class="BUTTON_STYLE1" id="tijiao">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">

            <tr>
                <td class="TD_STYLE1" width="30%">
                    请选择职位分类
                </td>
                <td class="TD_STYLE2" width="30%">
                    <select name="major_kind_id" multiple="multiple" style="width: 290px;height: 86px"
                            id="majorKindId" class="SELECT_STYLE2">                     
                        @foreach (config_major_kind item in ViewBag.list4)
                        {
                            <option value="@item.major_kind_id">@item.major_kind_name</option>
                        }  
                    </select>
                    <select name="human_major_id" multiple="multiple" style="width: 290;height: 100"
                            id="majorId" size="5"
                            class="SELECT_STYLE2">
                    </select>

                </td>
            </tr>

            <tr>
                <td class="TD_STYLE1" width="30%">
                    请输入关键字
                </td>
                <td width="84%">
                    <input type="text" name="utilBean.primarKey" value=""
                           class="INPUT_STYLE2" />
                </td>
            </tr>

            <tr>
                <td class="TD_STYLE1" width="30%">
                    请输入登记时间
                </td>
                <td width="84%" class="TD_STYLE2">
                    <input type="hidden" name="utilBean.datePropertyName" value="registTime"/>

                    <input type="text" name="utilBean.startDate" style="width: 14%" class="INPUT_STYLE2" id="kai" readonly="readonly" >
                    至
                    <input type="text" name="utilBean.endDate" style="width: 14%" class="INPUT_STYLE2" id="end" readonly="readonly">
                    （YYYY-MM-DD）
                </td>
            </tr>
        </table>
    </form>
</body>
</html>

