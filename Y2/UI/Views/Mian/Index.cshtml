
@{
    ViewBag.Title = "Index";
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title></title>
    <script src="~/jquery-easyui-1.3.5/jquery.min.js"></script>
    <script src="~/jquery-easyui-1.3.5/jquery.easyui.min.js"></script>
    <link href="~/jquery-easyui-1.3.5/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/jquery-easyui-1.3.5/themes/icon.css" rel="stylesheet" />
    <script src="~/jquery-easyui-1.3.5/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#tt').tree({
                url: "/Mian/Index2",
                onClick: function (node) {
                    var text = node.text;
                    var url = node.quanurl;
                    if (url != null) {
                        //页面级
                        //如果页面有，就选中，否则就添加
                        if ($("#tabs").tabs('exists', text)) {
                            $("#tabs").tabs('select', text)
                        } else {
                            $('#tabs').tabs('add', {
                                title: text,
                                content: '<iframe src=' + url + ' width="1320px" height="460px" />',
                                closable: true,
                                tools: [{
                                    iconCls: 'icon-mini-refresh',
                                    handler: function () {
                                        alert('refresh');
                                    }
                                }]
                            });
                        }
                    }
                }
            });
            
        })
    </script>
</head>
<body class="easyui-layout">
    <div data-options="region:'north',title:'',split:true" style="height:200px;">
        <iframe src="~/Hr/top.html" width="99%" height="190"></iframe>
    </div>


    <div data-options="region:'west',title:'',split:true" style="width:200px;">
        <ul id="tt"></ul>
    </div>
    <div data-options="region:'center',title:''" style="padding:5px;background:#eee;">
        <div id="tabs" class="easyui-tabs" style="width:1360px;height:500px;">
        </div>
    </div>
</body>


</html>

