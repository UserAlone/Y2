
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; c+lharset=71ppUTF-8">
    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css"
          type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script src="~/Scripts/vue.js"></script>
    <script type="text/javascript">
        var Currentpage = 1;
        var pages = 1;
        var vm;
        $(function () {
            fill();
        })
        function fill() {
            vm = new Vue({
                el: "#body",
                data: {
                    nums: null,
                    rows: null,
                    pages: null,
                    current: null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            type: "get",
                            url: "/humanResources/human_register_index2",
                            data: "Currentpage=" + Currentpage,
                            success: function (mess) {
                                var data = eval("(" + mess + ")");
                                t.nums = data["dt"];
                                t.rows = data["rows"];
                                t.pages = data["pages"];
                                t.current = Currentpage;
                            }
                        })
                    }
                }
            })
            vm.load();
        }
        $(function () {
            $("#first").click(function () {
                Currentpage = 1;
                vm.load();
            })
            $("#prev").click(function () {
                if (Currentpage > 1) {
                    Currentpage--;
                }
                vm.load();
            })
            $("#next").click(function () {
                if (Currentpage < vm.pages) {
                    Currentpage++;
                }
                vm.load();
            })
            $("#last").click(function () {
                Currentpage = vm.pages;
                vm.load();
            })
            $("#btn").click(function () {
                Currentpage = $("#kuan").val();
                vm.load();
            })
        })
    </script>
</head>

<body>
    <div id="body">
        <form action="/HR_Fist/recruit/recruitAction!toRegisterList" name="fm">
            <input type="hidden" name="utilBean.currPage" id="page" />
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案查询  </font>
                    </td>
                </tr>

            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr class="TR_STYLE1">
                    <td class="TD_STYLE1">
                        姓名
                    </td>
                    <td class="TD_STYLE1">
                        性别
                    </td>
                    <td class="TD_STYLE1">
                        年龄
                    </td>
                    <td class="TD_STYLE1">
                        职位类别
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE1">
                        毕业院校
                    </td>
                    <td class="TD_STYLE1">
                        学历专业
                    </td>
                    <td class="TD_STYLE1">
                        申请
                    </td>
                </tr>
                <tr v-for="(item,i) in nums">
                    <td>{{item.human_name}}</td>
                    <td>{{item.human_sex}}</td>
                    <td>{{item.human_age}}</td>
                    <td>{{item.human_major_kind_name}}</td>
                    <td>{{item.human_major_name}}</td>
                    <td>{{item.human_college}}</td>
                    <td>{{item.human_educated_major }}</td>
                    <td><a :href="['/humanResources/human_register/'+item.res_id]">登记</a></td>
                </tr>
            </table>
            <p>
                &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{current}}页 / 每页显示 3 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="first">首页</a> &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="prev">上一页</a> &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="next">下一页</a> &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="last">尾页</a> &nbsp;&nbsp;&nbsp;
                跳到第 <input type=text class=input1 id="kuan" size=1> 页&nbsp;&nbsp;<input type="image" id="btn" src="../../../images/go.bmp" width=18 height=18 border=0>
        </form>
    </div>
</body>
</html>
