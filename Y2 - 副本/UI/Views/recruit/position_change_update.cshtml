
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script src="~/Scripts/vue.js"></script>
    <script type="text/javascript">
        var Currentpage = 1;
        var pages = 1;
        var vm;
        $(function () {
            fill();
        })
        function fill() {
            vm = new Vue({
                el: "#body",
                data: {
                    nums: null,
                    rows: null,
                    pages: null,
                    current: null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            type: "get",
                            url: "/recruit/position_change_update2",
                            data: "Currentpage=" + Currentpage,
                            success: function (mess) {
                                var data = eval("(" + mess + ")");
                                t.nums = data["dt"];
                                t.rows = data["rows"];
                                t.pages = data["pages"];
                                t.current = Currentpage;
                                for (var i = 0; i < t.nums.length; i++) {
                                    t.nums[i]["regist_time"] = fillSJ(t.nums[i]["regist_time"]);
                                    t.nums[i]["deadline"] = fillSJ(t.nums[i]["deadline"]);
                                }
                            }
                        })
                    }
                }
            })
            vm.load();
        }
        function fillSJ(sj) {
            var mather = new Date(Date.parse(sj));
            var time = mather.getFullYear() + "-" + (mather.getMonth() + 1) + "-" + mather.getDate();
            return time;
        }
        $(function () {
            $("#first").click(function () {
                Currentpage = 1;
                vm.load();
            })
            $("#prev").click(function () {
                if (Currentpage > 1) {
                    Currentpage--;
                }
                vm.load();
            })
            $("#next").click(function () {
                if (Currentpage < vm.pages) {
                    Currentpage++;
                }
                vm.load();
            })
            $("#last").click(function () {
                Currentpage = vm.pages;
                vm.load();
            })
            $("#btn").click(function () {
                Currentpage = $("#kuan").val();
                vm.load();
            })
        })
    </script>

</head>

<body>
    <div id="body">
        <form method="post" action="javascript:void(0)" name="fm">
            <input type="hidden" name="utilBean.currPage" id="page" />
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布变更
                        </font>
                    </td>
                </tr>

            </table>
            当前可变更是职位发布总数：{{rows}} 例
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="15%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="20%" class="TD_STYLE1">
                        公司名称
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        招聘人数
                    </td>
                    <td width="20%" class="TD_STYLE1">
                        发布时间
                    </td>
                    <td width="20%" class="TD_STYLE1">
                        截止时间
                    </td>
                    <td width="8%" class="TD_STYLE1">
                        修改
                    </td>
                    <td width="8%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>
                <tr v-for="(item,i) in nums">
                    <td>{{item.major_name}}</td>
                    <td>{{item.second_kind_name}}</td>
                    <td>{{item.human_amount}}</td>
                    <td>{{item.regist_time}}</td>
                    <td>{{item.deadline}}</td>
                    <td><a :href="['/recruit/position_release_changeUpdateCha/'+item.mre_id]">修改</a></td>
                    <td><a :href="['/recruit/position_registerDel/'+item.mre_id]" onclick="return confirm('确定删除吗？')">删除</a></td>
                </tr>
            </table>
            <p style="text-align: center;">
                &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{current}}页 / 每页显示 3 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="first">首页</a> &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="prev">上一页</a> &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="next">下一页</a> &nbsp;&nbsp;&nbsp;
                <a href="javascript:void(0)" id="last">尾页</a> &nbsp;&nbsp;&nbsp;
                跳到第 <input type=text class=input1 id="kuan" size=1> 页&nbsp;&nbsp;<input type="image" id="btn" src="../../../images/go.bmp" width=18 height=18 border=0>
        </form>
    </div>
</body>
</html>
